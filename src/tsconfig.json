{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "../dist",
        "removeComments": false,
        "sourceMap": false,
        "target": "es5",
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "files": [
        "ng-select.ts"
    ],
    "paths": {
        "@angular/*": [
            "../node_modules/@angular/*"
        ]
    },
    "angularCompilerOptions": {
        "genDir": "../aot",
        "strictMetadataEmit": true
    }
}
